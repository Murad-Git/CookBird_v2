<div class="js-Modal-full-nutrition modal modal-full-nutrition">
    <div class="frame-border col-lg-4 col-sm-6">
        <h1 class="cb-recipe-title__main--modal"><%=recipe.title%></h1>
        <div class="nutrition-label" data-loaded="">
            <!-- Nutrition data -->
        </div>
        <%if(recipe.ingredients){%>
            <div class="ingredients">
                <h6>INGREDIENTS:</h6>
                <p>
            <%recipe.ingredients.forEach(ing=>{%>

                <span class="cb-info-list__amount"><%=ing.amount?ing.amount.toFixed(2):''%>
                    <%=ing.unit?ing.unit:''%></span>
                    <%=ing.name?ing.name:''%>
            <%})%>
                </p>
            </div>
        <%}%>


