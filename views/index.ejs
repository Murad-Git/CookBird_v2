                                                    <li class="collapse" id="seeMore-intolerances"><a href="/?intolerances=wheat">Wheat</a></li>
                                                </ul>
                                                <a class="filter-more js-see-more-btn" data-bs-toggle="collapse" href="#seeMore-intolerances" aria-expanded="false" aria-controls="seeMore-intolerances">see more</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <!-- SECTION: RECIPES CONTENT -->
                        <section class="col-md-9 col-sm-12 section-recipe">
                            <div class="row cookbird-thumbs-out">
 
                                <%recipes.forEach(recipe=>{%>
                                    <div class="recipe-thumb col-lg-4 col-md-6 col-xs-12">
                                        <a class="recipe-anchor" href="/<%=recipe.id%>">
                                            <div class="recipe-anchor__link">
                                                <figure>
                                                    <img class="recipe-main-img" src="<%=recipe.image%>" alt="<%=recipe.title%>">
                                                </figure>
                                            </div>
                                            <h3><%=recipe.title%></h3>
                                        </a>
                                    </div>
                                <%})%>

                                </div>
                            </div>
                            <!-- loading more recipes pointer -->
                            <div class="js-load-more text-center"></div>
                            <!-- more recipe loader button -->
                            <div class="load-wrap hide" id="js-cookbird-loader"></div>                  
                        </section>
                    </div>
                </div>
            </div>
        </div>
        <!-- back-to top button -->
        <div class="back-top" data-role="scroll-top">
            <i class="fas fa-chevron-circle-up btn-up"></i>
        </div>
    </div>

