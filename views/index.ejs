
<!-- include header -->
<%- include('partials/_header.ejs') %>
<!-- include header -->

    <!-- LOGO -->
    <header class= "header-main">
        <div class="container">
            <a href="/" class="logo"><img class="logo__img" src="img/bird_alone_icon.png" alt="logo-img"></a>
        </div>
    </header>
    <!-- SECTION: MAIN -->
    <div class="main">
        <div class="cookbird-page">
            <!-- SECTION: SEARCH-BAR -->
            <section class="search-bar" >
                <div class="container">
                    <div class="row">
                        <!-- Logo title -->
                        <div class="col-md-3 mt-10 search-bar__icon">
                            <h1 class="search-bar__title"><a class=" search-bar__href" href="/">Cookbird</a></h1>
                        </div>

                        <!-- search field -->
                        <form method="GET" action="/"class="form-inline col-md-9 row">
                        <div class="col-md-9 col-xs-9 search-bar-input">
                            <div class="form-group mb-2">
                                <label for="search-btn" class="sr-only">Go</label>
                                <input class="search-input form-control js-search-value" type="text" placeholder="Search" name="search" value="<%=query%>" autocomplete>
                                <ul class="search-auto-items js-autocomplete-parent">
                            </div>
                        </div>
                        <!-- search button -->
                        <div class="col-md-1 col-xs-3 search-btn">
                            <button type="submit" class="btn btn--small btn--full">Go</button>
                        </div>
                        </form>
                    </div>
                </div>
            </section>
            <!-- MAIN PAGE CONTAINER -->
            <div class="container">
                <!-- contener to margin content -->
                <div class="container-in">
                    <div class="row">
                        <!-- SECTION: SEARCH SIDE BAR -->
                        <section class="col-md-3 col-sm-12 cookbird-side-bar">
                            <div class="js-filters">
                                <div class="accordion" id="filter-mealTypes">
                                    <div class="accordion-group">
                                        <h2 class="js-filter-group group-items" data-bs-toggle="collapse" href="#filterCollapse-meal" aria-expanded="false" aria-controls="filterCollapse-meal">
                                            Meal Types
                                            <button class="toggler expand"><i class="fas fa-chevron-circle-down"></i></button>
                                        </h2>
                                        <div class="accordion-body collapse-in">
                                            <div class="accordion-inner collapse show" id="filterCollapse-meal">
                                                <ul class="group-list">
                                                    <li ><a href="/?search=main course">Main Course</a></li>
                                                    <li ><a href="/?search=breakfast">Breakfast</a></li>
                                                    <li ><a href="/?search=soup">Soup</a></li>
                                                    <li ><a href="/?search=salad">Salad</a></li>
                                                    <li ><a href="/?search=snack">Snack</a></li>
                                                    <li ><a href="/?search=dessert">Dessert</a></li>
                                                    <li ><a href="/?search=Beverage">Beverage</a></li>
                                                    <li class="collapse" id="seeMore-meal"><a href="/?search=appetizer">Appetizer</a></li>
                                                    <li class="collapse" id="seeMore-meal"><a href="/?search=marinade">Marinade</a></li>
                                                    <li class="collapse" id="seeMore-meal"><a href="/?search=drink">Drink</a></li>
                                                    <li class="collapse" id="seeMore-meal"><a href="/?search=bread">Bread</a></li>
                                                    <li class="collapse" id="seeMore-meal"><a href="/?search=sauce">Sauce</a></li>
                                                </ul>
                                                <a class="filter-more js-see-more-btn" data-bs-toggle="collapse" href="#seeMore-meal" aria-expanded="false" aria-controls="seeMore-meal">see more</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="accordion" id="filter-cuisine">
                                    <div class="accordion-group">
                                        <h2 class="js-filter-group group-items" data-bs-toggle="collapse" href="#filterCollapse-cuisine" aria-expanded="false" aria-controls="filterCollapse-cuisine">
                                            Cuisine
                                            <button class="toggler expand"><i class="fas fa-chevron-circle-down"></i></button>
                                        </h2>
                                        <div class="accordion-body collapse-in" id="collapseTwo">
                                            <div class="accordion-inner collapse show" id="filterCollapse-cuisine">
                                                <ul class="group-list">
